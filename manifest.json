{
  "manifest_version": 3,
  "name": "Chaoxing Copy & Paste Helper",
  "version": "1.3.1",
  "description": "Enable copy, paste and text extraction on Chaoxing with AI answers",
  "permissions": ["clipboardWrite", "scripting", "storage"],
  "host_permissions": ["*://*.chaoxing.com/*", "https://api.deepseek.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/chaoxing.png",
      "128": "icons/chaoxing.png"
    },
    "default_title": "超星学习助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chaoxing.com/*"],
      "js": [
        "assets/TyprMd5.js",
        "modules/logger.js",
        "modules/PasteEnabler.js",
        "modules/CopyEnabler.js",
        "modules/CopyAllQuestion.js",
        "modules/UEditorUnlock.js",
        "modules/ai-answer/notify.js",
        "modules/ai-answer/api.js",
        "modules/ai-answer/ui.js",
        "modules/ai-answer/core.js",
        "modules/ai-answer/index.js",
        "content-message-handler.js",
        "fk-cx-main.js"
      ],
      "css": ["modules/ai-answer/notify.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/table.json", "injected.js", "modules/ai-answer/notify.css"],
      "matches": ["*://*.chaoxing.com/*"]
    }
  ],
  "icons": {
    "48": "icons/chaoxing.png",
    "128": "icons/chaoxing.png"
  }
}